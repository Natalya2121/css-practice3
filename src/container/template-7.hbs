

 <div class="hero">
    {{#with hero}}
        {{>hero title=title text=description}}
        <a href="{{button.url}}" class="button">{{button.text}}</a>
    {{/with}}
</div>

<div class="about">
    {{#with about}}
        <h1 class="about_heading">{{heading}}</h1>
        <p class="about_info">{{info}}</p>
    {{/with}}
</div>

    
<main class="articles">
    <div class="articles_title">
        <strong>Our Articles</strong>
        <a href="#">View All</a>
    </div>
    <div class="articles_info">
        {{#each articles}}
            {{> articleCardDark data=this}}
        {{/each}}
    </div>
</main>

